rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function isAdmin() {
      return isAuthenticated() &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Products collection - Public read, admin write
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Users collection - Users can read/write their own data
    match /users/{userId} {
      allow read: if isOwner(userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Orders collection - Users can create and read their own orders
    match /orders/{orderId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Shopping cart - Users can read/write their own cart
    match /cart/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Newsletter subscriptions - Anyone can subscribe
    match /newsletter/{email} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Inventory logs - Read only for admins
    match /inventory_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false; // Created only through server/cloud functions
    }

    // Gift Cards collection
    match /giftCards/{giftCardId} {
      // Anyone can read gift cards they've received or sent
      allow read: if isAuthenticated() && (
        resource.data.recipientEmail == request.auth.token.email ||
        resource.data.senderEmail == request.auth.token.email
      );

      // Only authenticated users can create gift cards (after payment)
      allow create: if isAuthenticated();

      // Only authenticated users can update gift cards they've received (for redemption)
      // or admins can update any gift card
      allow update: if isAdmin() || (
        isAuthenticated() &&
        resource.data.recipientEmail == request.auth.token.email &&
        // Ensure only balance and redemption fields are updated
        request.resource.data.keys().hasAll(['balance', 'redemptions', 'updatedAt'])
      );

      // Only admins can delete gift cards
      allow delete: if isAdmin();
    }

    // Content management collections (AI-generated content)
    match /content-videos/{videoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /content-photos/{photoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /content-rotation-config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
